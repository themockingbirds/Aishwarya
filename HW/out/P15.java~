import java.util.Scanner;
class P15{
	public static void main(String arg[]){
		String name,cls,school,feesPaid;
		int i,roll,age;
		float fees;
		Scanner s=new Scanner(System.in);
		
		for(i=0;i<3;i++){
			System.out.print("Enter name: ");
			name=s.nextLine();
			System.out.print("Enter roll: ");
			roll=s.nextInt();
			System.out.print("Enter age: ");
			age=s.nextInt();
			s.nextLine();
			System.out.print("Enter class: ");
			cls=s.nextLine();
			System.out.print("Enter fees: ");
			fees=s.nextFloat();
			System.out.print("Enter fees paid: ");
			feesPaid=s.nextLine();
			s.nextLine();
		}
		System.out.printf("%-20s\t%-5s\t%-5s\t%-5s\t%-15s\t%-10s\n","Name","Roll","Age","Class","Fees","Fees paid");
		for(i=0;i<3;i++){
			System.out.printf("%-20s\t%-5d\t%-5d\t%-5s\t%-15.2f\t%-10s\n",+name+roll+age+cls+fees+feesPaid);
		}
			
	}
	
}
	
		