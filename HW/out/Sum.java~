import java.util.Scanner;
public class Sum{
    public static void main(String[] args){
        Scanner sc = new Scanner(System.in);
        // String to store all the numbers
        String nums = "";
        // Odd numbers' sum
        int oddSum = 0;

        // Enter the number of integers to enter
        int n = sc.nextInt();
        // Get the numbers
        for(int i = 0; i < n; i++){
            int num = sc.nextInt();
            nums += num + " ";

            if(num % 2 != 0)
                oddSum += num;
        }

        // Print the results
        System.out.println("\nSo all the numbers are:");
        System.out.println(nums);
        System.out.println("\nSum of the odd numbers is: " + oddSum);
    }
}